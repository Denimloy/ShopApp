@model  ShopApp.Models.Category

<div class="delete card" style="width: 18rem;">
    <div class="card-body">
        <p class="card-text">Do you want to delete the Category: <strong>@Model.Name</strong>?</p>
        <form asp-action="Delete" asp-controller="Category" asp-antiforgery="true">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Confirm" />
                <a class="btn btn-danger" role="button" asp-action="GetAllCategories" asp-controller="Category">Cancel</a>
            </div>
        </form>
    </div>
</div>

