@model List<ShopApp.Models.Category>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Categories</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 1%">
                        ID
                    </th>
                    <th style="width: 20%">
                        Name
                    </th>
                    <th style="width: 20%">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    if (category.ParentId == null)
                    {
                        <tr>
                            <td>
                                @category.Id
                            </td>
                            <td>
                                <a>
                                    @category.Name
                                </a>
                                <br />
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm" asp-action="EditMainCategory" asp-controller="Category" asp-route-categoryId="@category.Id">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Edit
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id">
                                    <i class="fas fa-trash">
                                    </i>
                                    Delete
                                </a>
                            </td>
                        </tr>


                    }
                    else
                    {
                        <tr>
                            <td>
                                @category.Id
                            </td>
                            <td>
                                <a>
                                    @category.Name
                                </a>
                                <br />
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm"  asp-action="EditSubcategory" asp-controller="Category" asp-route-subcategoryId="@category.Id">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Edit
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id">
                                    <i class="fas fa-trash">
                                    </i>
                                    Delete
                                </a>
                            </td>
                        </tr>


                    }
                }
            </tbody>
        </table>
    </div>
</section>
