@model ShopApp.Models.Category
@{
    ViewBag.Title = "Admin - Edit Main Category";
    string imagePath = Model.Image?.Path ?? "~/images/noimage.png";
}

<div class="row">
    <div class="col-md-6" id="form">
        <h4 class="form_title">Edit Category</h4>
        <hr />
        <div class="category-image">
            <img src="@Url.Content(imagePath)" class="img-thumbnail" alt="...">
            <a asp-action="EditCategoryImage" asp-controller="Image" asp-route-categoryId="@Model.Id"><p>Change image <i class="far fa-edit fa-lg"></i></p></a>
        </div>
        <form asp-action="EditMainCategory" asp-antiforgery="true" asp-route-id="@Model.Id">
            <div class="form-group">
                <label asp-for="CategoriesTitleId" class="control-label"></label>
                <select id="categories-title" asp-for="CategoriesTitleId" class="form-select" asp-items="ViewBag.CategoriesTitles"></select>
                <span asp-validation-for="CategoriesTitleId" class="text-danger"></span>
                <span id="error-message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <hr />
            <div class="d-grid gap-2 d-md-block form-group">
                <button class="btn btn-primary" type="submit">Submit</button>
                <a class="btn btn-danger" asp-action="GetAllCategories" asp-controller="Category" role="button">Cancel</a>
            </div>
            <br />
        </form>
    </div>
</div>

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="/Admin/myscripts/category-validation.js"></script>
}
