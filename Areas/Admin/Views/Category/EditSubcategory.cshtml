@model ShopApp.Models.Category
@{
    ViewBag.Title = "Admin - Edit Subcategory";
}

<div class="row">
    <div class="col-md-6" id="category_form">
        <h4 class="category_form_title">Edit Subcategory</h4>
        <hr />
        <br />
        <form asp-action="EditSubcategory" asp-antiforgery="true" asp-route-id="@Model.Id">
            <div class="form-group">
                <label asp-for="ParentId" class="control-label"></label>
                <select id="main-category" asp-for="ParentId" class="form-select" asp-items="ViewBag.MainCategories"></select>
                <span asp-validation-for="ParentId" class="text-danger"></span>
                <span id="error-message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <hr />
            <div class="d-grid gap-2 d-md-block form-group">
                <button class="btn btn-primary" type="submit">Submit</button>
                <a class="btn btn-danger" asp-action="GetAllCategories" asp-controller="Category" role="button">Cancel</a>
            </div>
            <br />
        </form>
    </div>
</div>

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="/Admin/myscripts/subcategory-validation.js"></script>
}
