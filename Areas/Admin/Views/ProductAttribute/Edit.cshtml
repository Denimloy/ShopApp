@model ShopApp.ViewModels.CreateProductAttributeViewModel
@{
    ViewBag.Title = "Admin - Edit Product Attribute";
}

<div class="row">
    <div class="col-md-6" id="form">
        <h4 class="form_title">Edit Product Attribute</h4>
        <hr />
        <br />
        <form asp-action="Edit" asp-antiforgery="true" asp-route-ProductAttribute.Id="@Model.ProductAttribute.Id">
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select id="select-category" asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            @if (ViewBag.AttributesTemplates != null)
            {
                <div id="attributes-templates">
                    <div class="form-group">
                        <label asp-for="ProductAttribute.AttributesTemplateId" class="control-label"></label>
                        <select asp-for="ProductAttribute.AttributesTemplateId" class="form-select" asp-items="ViewBag.AttributesTemplates">
                            <option selected="selected" value="" hidden></option>
                        </select>
                        <span asp-validation-for="ProductAttribute.AttributesTemplateId" class="text-danger"></span>
                    </div>
                </div>
            }
            <div id="attributes-templates"></div>
            <div class="form-group">
                <label asp-for="ProductAttribute.Value" class="control-label">Name</label>
                <input asp-for="ProductAttribute.Value" class="form-control" />
                <span asp-validation-for="ProductAttribute.Value" class="text-danger"></span>
            </div>
            <br />
            <hr />
            <div class="d-grid gap-2 d-md-block form-group">
                <button class="btn btn-primary" type="submit">Submit</button>
                <a class="btn btn-danger" asp-action="GetAllProductAttributes" asp-controller="ProductAttribute" role="button">Cancel</a>
            </div>
            <br />
        </form>
    </div>
</div>

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="/Admin/myscripts/product-attribute-form.js"></script>
}