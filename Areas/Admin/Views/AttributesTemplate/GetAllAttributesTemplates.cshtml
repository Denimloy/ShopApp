@model List<ShopApp.Models.AttributesTemplate>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Attributes Templates</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 1%">
                        ID
                    </th>
                    <th style="width: 20%">
                        Name
                    </th>
                    <th style="width: 20%">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var attributesTemplate in Model)
                {
                    <tr>
                        <td>
                            @attributesTemplate.Id
                        </td>
                        <td>
                            <a>
                                @attributesTemplate.Name
                            </a>
                            <br />
                        </td>
                        <td class="project-actions text-right">
                            <a class="btn btn-info btn-sm" asp-action="Edit" asp-controller="AttributesTemplate" asp-route-id="@attributesTemplate.Id">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Edit
                            </a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="AttributesTemplate" asp-route-id="@attributesTemplate.Id">
                                <i class="fas fa-trash">
                                </i>
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
