@model ShopApp.ViewModels.CreateProductViewModel

<div id="product-attributes">

    @for (int i = 0; i < Model.AttributesTemplates.Count; i++)
    {
        <div class="form-group">
            <label class="control-label">@Model.AttributesTemplates[i].Name</label>
            <select id="categories-title" asp-for="selectedProductAttributeId[i]" class="form-select">
                <option selected="selected" value="0" hidden></option>
                @foreach (var productAttributes in @Model.AttributesTemplates[i].ProductAttributes)
                {
                    <option value="@productAttributes.Id"> @productAttributes.Value</option>
                }
            </select>
            <span asp-validation-for="selectedProductAttributeId[i]" class="text-danger"></span>
        </div>
    }
</div>
